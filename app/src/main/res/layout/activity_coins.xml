<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_main_image_Activity"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Coins"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#1EA3CF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E3EAE9"
        android:padding="5dp"
        android:weightSum="10"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coin_in_profile"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"

            />
        <TextView
            android:id="@+id/show_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="25sp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical|left"
            android:textStyle="bold"
            android:layout_weight="4"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/show_diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"

            android:gravity="right|center_vertical"
            android:text="00"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.airbnb.lottie.LottieAnimationView

            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/diamond1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_weight="1"


            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redeem"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#5D615C"
        />
