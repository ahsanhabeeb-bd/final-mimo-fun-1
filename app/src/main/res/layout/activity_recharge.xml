<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_main_image_Activity"
    android:orientation="vertical"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/dimond_cat"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:lottie_rawRes="@raw/dimond_cat"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance Diamonds"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="#FFCE3B"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/dimond_cat1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:lottie_rawRes="@raw/diamond1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center_vertical"
            />


        <TextView
            android:id="@+id/dimond_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" diamond"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="#FFCE3B"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:fontFamily="@font/arbutus"
            />
    </LinearLayout>


</LinearLayout>