<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/f_bag"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in \n with"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/audiowide"
        android:layout_marginTop="90dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="70dp"
        android:backgroundTint="#313A3C"
        android:fontFamily="@font/audiowide"
        android:drawableLeft="@drawable/phone_i_1"
        android:text="Phone Number"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/audiowide"
        android:layout_marginTop="30dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="90dp"
        android:backgroundTint="#313A3C"
        android:drawableLeft="@drawable/mail_001"
        android:fontFamily="@font/audiowide"
        android:text="Email"
        android:textSize="20sp"
        android:textStyle="bold" />







</LinearLayout>