<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/love_rain"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/home_top_bg_3"
        >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/related_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/audiowide"
                    android:text="Related"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/related_id_view"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/related_under"
                    android:visibility="invisible"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/hot_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/audiowide"
                    android:text="Hot"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <View
                    android:id="@+id/hot_id_view"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/related_under"
                    android:visibility="visible"
                    />

            </LinearLayout>

        <ImageView
            android:id="@+id/scarse_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/serch_icon_1" />

        <ImageView
            android:id="@+id/live_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/live_icon_1" />

    </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"

        >



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="30dp"
                        android:background="#20FFFFFF"
                        android:elevation="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <com.denzcoskun.imageslider.ImageSlider
                                android:id="@+id/slider"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:iss_period="1500"
                                app:iss_auto_cycle="true"
                                app:iss_delay="2000"
                                app:iss_title_background="@color/white"
                                app:iss_corner_radius="30"

                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"

                        />












    </LinearLayout>
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"
            android:layout_gravity="center"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/home_bottom_bg3"
        android:weightSum="4"
        android:layout_gravity="bottom"
        android:gravity="bottom"

        >

            <ImageView
                android:id="@+id/home1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/home_icon_re"
                />
            <ImageView
                android:id="@+id/game1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/game_icon_re"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/chat1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/chat_icon_re"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/profile1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_icon_2_re"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|right"
        android:paddingRight="5dp"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/love_birds_lottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </LinearLayout>



</FrameLayout>