<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_main_image_Activity"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/photomain1"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ladis6" />

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/edit_profile1"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo_round1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ladis4"
                    app:civ_border_color="#ECF1F1"
                    app:civ_border_width="2dp"

                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="30dp"
                    android:textColor="#E30C0C"
                    android:layout_marginTop="190dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    />
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="250dp"
                    android:layout_marginLeft="30dp"
                    >

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/label_back_1"
                        >

                        <ImageView
                            android:id="@+id/gender"
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:src="@drawable/female_sign"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/age1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="26"
                            android:layout_gravity="center"
                            />



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/label_back_3"
                        android:layout_marginLeft="5dp"
                        >

                        <com.airbnb.lottie.LottieAnimationView

                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            app:lottie_rawRes="@raw/star_1_for_label"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/sending_level"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="10"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:background="@drawable/label_back_3"
                        android:layout_marginLeft="5dp"
                        >

                        <com.airbnb.lottie.LottieAnimationView

                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            app:lottie_rawRes="@raw/heard_for_label"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:id="@+id/recevinging_lavel"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="26"
                            android:layout_gravity="center"
                            />



                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="280dp"
                    android:background="@drawable/lable_back_4"
                    android:elevation="10dp"
                    android:orientation="horizontal"
                    app:cardCornerRadius="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="ID:"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/uid1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="10000000"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="5dp"

                        />

                </LinearLayout>


            </FrameLayout>
            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="agdlkggrlkmtekemlkmlkmb \n nlkglmblkbl sgbsfb"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_marginVertical="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    >



                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/badge_top_1"
                        />






                </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="Car"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/badge_top_1"
                    />


            </GridLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>